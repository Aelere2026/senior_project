{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "esnext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "outDir": "dist",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "node"
        ],
        "baseUrl": "./",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/components/test.js",
    ]
}